# Set variables


# ORINGAL CODE ----
# $zipUrl = "https://your-git-server.com/path/to/odt.zip"   # Replace with your actual zip URL
# $downloadPath = "$env:TEMP\odt.zip"
# $extractPath = "$env:TEMP\odt"

$zipUrl = "https://github.com/rpietz-eor/windows-install/blob/53ad979e8714364539c19285b5b15e8876d1d6e6/eor-odt-v1.zip"   # Replace with your actual zip URL
$downloadPath = "$env:TEMP\eor-odt-v1.zip"
$extractPath = "$env:TEMP\odt"


# Download the zip
Invoke-WebRequest -Uri $zipUrl -OutFile $downloadPath

# Extract the zip
Expand-Archive -Path $downloadPath -DestinationPath $extractPath -Force

# Run the Office Deployment Tool
Start-Process -FilePath "$extractPath\setup.exe" -ArgumentList "/configuration-Office365-x64.xml" -Wait

# Clean up (optional)
Remove-Item $downloadPath -Force
